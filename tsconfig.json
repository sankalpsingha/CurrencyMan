{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["jest", "node", "playwright"],
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["test/e2e/**/*", "test/e2e/**/*.ts", "test/e2e/**/*.js", "test/e2e/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "dist-chrome", "dist-firefox", "dist-dev"]
}
