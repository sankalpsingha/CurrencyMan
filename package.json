{
  "name": "currencyman",
  "version": "1.0.0",
  "description": "CurrencyMan is a Chrome extension that allows you to convert currency values on webpages to your preferred local currency. Simply select any text containing a currency value, and a popup will show the converted amount.",
  "main": "src/background/background.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "watch": "webpack --watch --config webpack.config.js",
    "clean": "rimraf dist",
    "test": "mocha test/unit/regex-unit-tests.js",
    "test:watch": "mocha --watch test/unit/regex-unit-tests.js",
    "pretest:e2e": "npm run build:multi",
    "pretest:e2e:chrome": "npm run build:chrome",
    "pretest:e2e:firefox": "npm run build:firefox",
    "test:e2e": "HEADLESS=true jest",
    "test:e2e:chrome": "HEADLESS=true BROWSER=chromium jest",
    "test:e2e:firefox": "HEADLESS=true BROWSER=firefox jest",
    "test:e2e:visible": "HEADLESS=false jest",
    "test:e2e:chrome:visible": "HEADLESS=false BROWSER=chromium jest",
    "test:e2e:firefox:visible": "HEADLESS=false BROWSER=firefox jest",
    "build:dev": "webpack --config webpack.dev.config.js",
    "watch:dev": "webpack --watch --config webpack.dev.config.js",
    "clean:dev": "rimraf dist-dev",
    "build:multi": "webpack --config webpack.multi.config.js",
    "build:chrome": "webpack --config webpack.multi.config.js --env browser=chrome",
    "build:firefox": "webpack --config webpack.multi.config.js --env browser=firefox",
    "watch:multi": "webpack --watch --config webpack.multi.config.js",
    "watch:chrome": "webpack --watch --config webpack.multi.config.js --env browser=chrome",
    "watch:firefox": "webpack --watch --config webpack.multi.config.js --env browser=firefox",
    "clean:multi": "rimraf dist-chrome dist-firefox",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Sankalp Singha",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-playwright-preset": "^4.0.0",
    "mocha": "^10.2.0",
    "playwright": "^1.51.1",
    "rimraf": "^6.0.1",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1",
    "zip-webpack-plugin": "^4.0.3"
  }
}
